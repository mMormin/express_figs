<%- include('partials/header') %>

<div class="container container-main">
  <div class="row">
    <div class="col">
      <h3 class="text-center">Votre liste de préférences</h3>

      <% if (!favoris.length) { %>

      <p>Oops, aucun favoris pour le moment !</p>

      <% } else { %>
      <table class="table">
        <thead>
          <th>Article</th>
          <th>Prix HT</th>
          <th></th>
        </thead>
        <tbody>
          <% for (const oneFavoris of favoris) { %>
          <tr>
            <td>
              <img
                class="img-thumbnail img-cart-list"
                src="/images/<%= oneFavoris.name %>.png"
                alt=""
              />
              <div class="item-description">
                <h5 class="item-title"><%= oneFavoris.title %></h5>
              </div>
            </td>

            <td>
              <p class="item-subtotal"><%= oneFavoris.price %></p>
            </td>

            <td>
              <a href="/favoris/delete/<%= oneFavoris.id %>"
                >Enlever de la liste</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %>
      <div class="row">
        <div class="col text-right">
          <a class="btn btn-success" href="/"> Retour à l'accueil </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
