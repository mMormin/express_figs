<%- include('partials/header') %>

<div class="container container-main">
  <div class="row">
    <div class="col">
      <h3 class="text-center">Votre liste de préférences</h3>

      <table class="table">
        <thead>
          <th>Article</th>
          <th>Prix HT</th>
          <th></th>
        </thead>
        <tbody>
          <% for (let i = 0; i < figurines.length; i++) { %>
            <tr>
              <td>
                <img
                  class="img-thumbnail img-cart-list"
                  src="/images/<%= figurines[i].name %>.png"
                  alt=""
                />
                <div class="item-description">
                  <h5 class="item-title"><%= figurines[i].title %></h5>
                </div>
              </td>
  
              <td>
                <p class="item-subtotal"><%= figurines[i].price %></p>
              </td>
  
              <td>
                <a href="/favorites/delete/<%= i %>">Enlever de la liste</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <div class="row">
        <div class="col text-right">
          <a class="btn btn-success" href="/"> Retour à l'accueil </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
